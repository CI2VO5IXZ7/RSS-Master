<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:media="http://search.yahoo.com/mrss/">
    <channel>
        <title>{{ feed.title.replace('&', '&amp;') }}</title>
        {% for item in items %}
            <item>
                <id>{{ item.id }}</id>
                <title>{{ item.title.replace('&', '&amp;') }}</title>
                <link rel="alternate" href="{{ item.link.replace('&', '&amp;') }}" style="display: block;"/>
                <description>{{ item.summary.replace('&', '&amp;') }}</description>
                <pubDate>{{ item.published }}</pubDate>
                <updated>{{ item.updated }}</updated>
                {% if item.media_thumbnail %}
                    <media:thumbnail url="{{ item.media_thumbnail[0].url.replace('&', '&amp;') }}"/>
                {% endif %}
                {% if item.media_content %}
                    <media:content url="{{ item.media_content[0].url.replace('&', '&amp;') }}"/>
                {% endif %}
                <content:encoded style="display: flex; align-items: center;">
                    <![CDATA[
                        {{ item.article }}
                    ]]>
                </content:encoded>
            </item>
        {% endfor %}
    </channel>
</rss>
